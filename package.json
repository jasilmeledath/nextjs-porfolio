{
  "name": "nextjs-portfolio",
  "version": "1.0.0",
  "description": "Full-stack Next.js portfolio application",
  "scripts": {
    "build": "cd client && npm ci && npm run build && cd ../server && npm ci --only=production",
    "start": "cd server && node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "health": "cd server && node healthcheck.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nextjs",
    "portfolio",
    "react",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Jasil Meledath",
  "license": "MIT"
}