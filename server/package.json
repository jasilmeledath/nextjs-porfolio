{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend API for professional portfolio application",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "jest --watchAll --no-cache --detectOpenHandles",
    "test:ci": "jest --ci --coverage --watchAll=false --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.8.1",
    "express-mongo-sanitize": "^2.2.0",
    "xss": "^1.0.14",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "nodemailer": "^6.9.4",
    "sharp": "^0.32.4",
    "slugify": "^1.6.6",
    "marked": "^5.1.2",
    "dompurify": "^3.0.5",
    "jsdom": "^22.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "mongodb-memory-server": "^8.14.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/constants/**"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}